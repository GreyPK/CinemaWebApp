@model film

@{
    ViewBag.Title = "Фильм подробнее";
}

<h2>Фильм подробнее</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            Название фильма
        </dt>

        <dd>
            @Html.DisplayFor(model => model.film_name)
        </dd>

        <dt>
            Режиссер
        </dt>

        <dd>
            @Html.DisplayFor(model => model.producer)
        </dd>

        <dt>
            Жанр
        </dt>

        <dd>
            @Html.DisplayFor(model => model.genre)
        </dd>

        <dt>
            Роли
        </dt>

        <dd>
            @Html.DisplayFor(model => model.roles)
        </dd>

        <dt>
            Длительность
        </dt>

        <dd>
            @Html.DisplayFor(model => model.duration)
        </dd>

        <dt>
            Описание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.review)
        </dd>

        <dt>
            Тип
        </dt>

        <dd>
            @Html.DisplayFor(model => model.film_type.film_type_name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Редактировать", "Edit", new {id = Model.id_film}) |
    @Html.ActionLink("Удалить", "Delete", new {id = Model.id_film}) |
    @Html.ActionLink("Назад", "Index")
</p>