@model ticket

@{
    ViewBag.Title = "Добавление билета";
}

<h2>Добавление билета</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.nomber_row, "Номер ряда", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomber_row, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.nomber_row, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nomber_seat, "Номер места", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomber_seat, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.nomber_seat, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.margin.coef_start, "Коэффициент наценки", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("id_margin", null, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.margin.coef_start, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_session, "Сеанс", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("id_session", null, new {@class = "form-control col-md-12"})


                @Html.ValidationMessageFor(model => model.id_session, "", new {@class = "text-danger"})
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}