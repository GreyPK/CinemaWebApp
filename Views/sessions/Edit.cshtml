@model session

@{
    ViewBag.Title = "Редактирование сеанса";
}

<h2>Редактирование сеанса</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.date_session, "Дата сеанса", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.date_session, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.date_session, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.time_session, "Время сеанса", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.time_session, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.time_session, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.base_price, "Базовая цена", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.base_price, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.base_price, "", new {@class = "text-danger"})
            </div>
        </div>

        @Html.HiddenFor(model => model.id_session)

        <div class="form-group">
            @Html.LabelFor(model => model.id_film, "Название фильма", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("id_film", null, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.id_film, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.id_room, "Кинозал", new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("id_room", null, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.id_room, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}